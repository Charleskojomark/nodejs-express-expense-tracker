<!DOCTYPE html>
<html lang="en">
<head>
        <link href="/css/bootstrap.min.css" rel="stylesheet">
    
    <title>Expenses</title>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center">Your Expenses</h1>

        <!-- Add Expense Form -->
        <form action="/expenses/add" method="POST" class="row g-3 mt-4">
            <div class="col-md-6">
                <input type="text" name="description" class="form-control" placeholder="Description" required>
            </div>
            <div class="col-md-4">
                <input type="number" name="amount" class="form-control" placeholder="Amount" required step="any">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-success w-100">Add</button>
            </div>
        </form>

        <!-- Expenses Table -->
        <table class="table table-striped mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% expenses.forEach(expense => { %>
                    <tr>
                        <td><%= expense.description %></td>
                        <!-- Displaying the amount with two decimal points -->
                        <td>₦<%= expense.amount.toFixed(2) %></td>
                        <td>
                            <!-- Edit Expense Form -->
                            <form action="/expenses/edit/<%= expense.id %>" method="GET" class="d-inline">
                                <button class="btn btn-warning btn-sm">Edit</button>
                            </form>
                            <!-- Delete Expense Form -->
                            <form action="/expenses/delete/<%= expense.id %>" method="POST" class="d-inline">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- Total Expenses Section -->
        <div class="text-end mt-4">
            <h4>Total Expenses: ₦<%= total.toFixed(2) %></h4>
        </div>
    </div>

</body>
</html>
