<!DOCTYPE html>
<html lang="en">
<head>
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <title>Update Expense</title>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center">Update Expense</h1>
        
        <!-- Update Expense Form -->
        <form action="/expenses/edit/<%= expense.id %>" method="POST" class="row g-3 mt-4">
            <div class="col-md-6">
                <input type="text" name="description" class="form-control" placeholder="Description" value="<%= expense.description %>" required>
            </div>
            <div class="col-md-4">
                <input type="number" name="amount" class="form-control" placeholder="Amount" value="<%= expense.amount %>" required step="any">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-success w-100">Update</button>
            </div>
        </form>

        <!-- Back to Expenses List -->
        <div class="mt-4 text-center">
            <a href="/expenses" class="btn btn-secondary">Back to Expenses List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
